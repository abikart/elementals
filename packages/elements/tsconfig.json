{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"lib": ["ES2018", "DOM", "DOM.Iterable"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}